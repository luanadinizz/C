#include <stdio.h>
#include <stdlib.h>
#include<math.h>

void main()
{
  int raio,comprimento,area,volume;
   printf("insira o raio da esfera ");
   scanf("%d",&raio);
   comprimento=2*M_PI*raio;
   printf("o comprimento da esfera e %d",comprimento);
   area=M_PI*pow(raio,2);
   printf("a area da esfera e %d",area);
   volume=3.0/4.0*M_PI*pow(raio,3);
   printf("o volume da esfera e %d",volume);
}
